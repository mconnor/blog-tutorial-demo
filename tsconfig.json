{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "verbatimModuleSyntax": true,
        "baseUrl": ".",
        "allowJs": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "paths": {
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"],
            "@content/*": ["src/content/*"],
            "@assets/*": ["src/assets/*"],
            "@scripts/*": ["src/scripts/*"],
            "@img/*": ["src/img/*"]
        }
    },
    "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.astro"]
}
